<%- include("partials/header")  %>

<div class="container">
    
<form action="/users/register" method="POST" enctype="multipart/form-data">
  <div class="encabezado-formulario mb-5" class="row">
    <div class="col-12 d-flex justify-content-center border-top border-dark pt-3 my-5">
        <h1 class="text-uppercase" >Formulario de registro</h1></div>
    <div class="alert alert-primary" role="alert" class="col-12 d-flex justify-content-center">
        <p class="text-center mb-0">Una vez registrado podra utilizar nuestro carrito de compras exclusivo para clientes y acceder a las ofertas.</p>
    </div>
</div>
    <div class="container-fluid my-5 border-bottom border-dark">
        <div class="form-group justify-content-center row">
            <label for="inputName" class="col-sm-3 col-form-label">Nombre: *</label>
            <div class="col-sm-7">
              <input type="text" name="first_name" class="form-control" id="inputName" required>
            </div>
          </div>
          <div class="form-group justify-content-center row">
            <label for="inputApellido" class="col-sm-3 col-form-label">Apellido: *</label>
            <div class="col-sm-7">
              <input type="text" name="last_name" class="form-control" id="inputApellido" required>
            </div>
          </div>
          <div class="form-group justify-content-center row">
            <label for="inputEmail" class="col-sm-3 col-form-label">E-mail: *</label>
            <div class="col-sm-7">
              <input type="email" name="email" class="form-control" id="inputEmail" required>
            </div>
          </div>
        <div class="form-group justify-content-center row">
            <label for="inputContraseña" class="col-sm-3 col-form-label">Contraseña: *</label>
            <div class="col-sm-7">

              <input type="password" name="password" class="form-control" id="inputContraseña" placeholder="Solo letras y numeros" required>
            </div>
          </div>
        <div class="form-group justify-content-center row">
            <label for="inputConfirmarContraseña" class="col-sm-3 col-form-label">Confirmar Contraseña: *</label>
            <div class="col-sm-7">
              <input type="password" name="repassword" class="form-control" id="inputConfirmarContraseña" required>
            </div>
          </div>
          <div class="form-group justify-content-center row">
            <label for="inputDireccion" class="col-sm-3 col-form-label">Direccion: </label>
            <div class="col-sm-7">
              <input type="text" name="address" class="form-control" id="inputDireccion">
            </div>
          </div>
          <div class="form-group justify-content-center row">
            <label for="inputLocalidad" class="col-sm-3 col-form-label">Localidad: </label>
            <div class="col-sm-7">
              <input type="text" name="city" class="form-control" id="inputLocalidad">
            </div>
          </div>
          <div class="form-group justify-content-center row">
            <label for="inputProvincia" class="col-sm-3 col-form-label">Provincia: </label>
            <div class="col-sm-7">
             <input type="text" name="state" class="form-control" id="inputProvincia">
            </div>
          </div>
          <div class="form-group justify-content-center row">
             <label class="col-sm-3 col-form-label">Subir imagen: </label>
             <div class="col-sm-7">
              <input type="file" id="inputImage" name="avatar">
            </div>
          </div>
          <div>
            <input style="display: none" type="text" name="status" value="0">
          </div>
        <div class="form-group justify-content-center row">
             <button type="submit" class="btn btn-primary my-5">Enviar</button>
        </div>
    </div>
  </form>
</div>

<%- include("partials/footer") %>
