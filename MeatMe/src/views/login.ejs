<%- include("partials/header")  %>
<div class="container my-5">
    <div class="row text-center border-top border-bottom border-dark justify-content-center">
        <form action="/users/login" method="POST" class="container">
            <div class="col-12">
               <h1>LOGIN</h1>
               <ul class="errors text-danger p-0">
                <% if(typeof errors != 'undefined') { %>
               <% for(let i = 0; i < errors.length; i++) { %>
                <li><%= errors[i].msg %> </li>
                <% } %> 
                <% } %> 
           </ul>
            </div>
            <div class="col-12 mt-3">
               <label for="email">Email</label>
               <input class="form-control w-50 mx-auto" id="inputEmail" type="email" name="email">
               <div class="email invalid-feedback"></div>
            </div>
            <div class="col-12 mb-2">
                <label for="password">Contraseña</label>
                <input class="form-control w-50 mx-auto" type="password" name="password" id="inputContraseña">
                <div class="password invalid-feedback"></div>
            </div>
            <div>
                <div class="control">
                    <input class="check-control" type="checkbox" name="remember" id="remember"> Recordarme
                </div>
            </div>
            <div class="col-12">
                <a href="#" >Olvide mi contraseña</a>
            </div>
            <div class="col-12 ">
                <a href="/users/register">Crear usuario nuevo</a>
            </div>
            <div class="col-12 text-center">
                <a href="/users/register"><button class="btn btn-primary my-4" type="submit">Ingresar</button></a>
            </div>
       </form>
    </div>
</div>

<!-- Scripts -->
<script>src= "../js/validator.js"</script>

<%- include("partials/footer") %>
