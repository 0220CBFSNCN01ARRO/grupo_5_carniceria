<%- include("partials/header")  %>
<body>

<% if(user) { %>


    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="panel panel-default">
            <div class="panel-heading">  <h4 >Datos del usuario</h4></div>
             <div class="panel-body">
            <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
              <% if(user.avatar) { %> 
             <img src="/img/avatars/<%=user.avatar%>" id="profile-image1" class="img-circle img-responsive" alt="User Pic"> 
              <% } %> 
            </div>
            <div class="col-md-8 col-xs-12 col-sm-6 col-lg-8" >
                <div class="container" >
                  <h2><%=user.first_name + " "+ user.last_name%></h2>
                  <p><b><%= user.city + " "+ user.state %> </b></p>

                </div>
                 <hr>
                <ul class="container details" >
                  <li><p><span class="glyphicon glyphicon-user one" style="width:50px;"></span>Direccion: <%= user.address %> </p></li>
                  <li><p><span class="glyphicon glyphicon-envelope one" style="width:50px;"></span>Mail: <%= user.email %></p></li>
                </ul>
                <hr>
                <div class="col-sm-5 col-xs-6 tital " ></div>
            </div>
            <div class="col-4 d-flex justify-content-end">
                <button class="btn btn-primary" role="button"><a href="/users/logout">LOGOUT</a></button>
              </div>
  </div>
  </div>
<% } %> 
<%- include("partials/footer") %>
</body>

</html>